commands:
  install_ffmpeg:
    command: |
      # Amazon Linux 2023 usa dnf en lugar de yum
      # Instalar FFmpeg desde los repositorios oficiales
      sudo dnf update -y
      sudo dnf install -y ffmpeg ffmpeg-devel
      
      # Verificar instalación
      ffmpeg -version
      which ffmpeg
      
      # Crear enlace simbólico si es necesario
      sudo ln -sf /usr/bin/ffmpeg /usr/local/bin/ffmpeg
    test: "[ ! -f /usr/bin/ffmpeg ]"