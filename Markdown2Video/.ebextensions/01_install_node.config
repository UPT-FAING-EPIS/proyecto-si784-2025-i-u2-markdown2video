# .ebextensions/install_node.config
packages:
  yum:
    epel-release: []
    
commands:
  01_install_node:
    command: |
      # 1. Instalar Node.js 18.x desde NodeSource
      curl -fsSL https://rpm.nodesource.com/setup_18.x | sudo bash -
      sudo yum install -y nodejs

      # 2. Verificar instalación
      node --version
      npm --version
      
  02_install_ffmpeg:
    command: |
      # Instalar FFmpeg como fallback para generación de videos
      sudo yum install -y ffmpeg
      ffmpeg -version || echo "FFmpeg installation failed, continuing..."
      
  03_install_chrome_deps:
    command: |
      # Instalar dependencias necesarias para Puppeteer/Chrome
      sudo yum install -y \
        alsa-lib.x86_64 \
        atk.x86_64 \
        cups-libs.x86_64 \
        gtk3.x86_64 \
        ipa-gothic-fonts \
        libXcomposite.x86_64 \
        libXcursor.x86_64 \
        libXdamage.x86_64 \
        libXext.x86_64 \
        libXi.x86_64 \
        libXrandr.x86_64 \
        libXScrnSaver.x86_64 \
        libXtst.x86_64 \
        pango.x86_64 \
        xorg-x11-fonts-100dpi \
        xorg-x11-fonts-75dpi \
        xorg-x11-fonts-cyrillic \
        xorg-x11-fonts-misc \
        xorg-x11-fonts-Type1 \
        xorg-x11-utils