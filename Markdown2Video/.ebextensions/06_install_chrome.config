commands:
  01_install_chrome:
    command: |
      # Instalar dependencias para Chrome
      yum install -y \
        alsa-lib \
        atk \
        cups-libs \
        gtk3 \
        ipa-gothic-fonts \
        libXcomposite \
        libXcursor \
        libXdamage \
        libXext \
        libXi \
        libXrandr \
        libXScrnSaver \
        libXtst \
        pango \
        xorg-x11-fonts-100dpi \
        xorg-x11-fonts-75dpi \
        xorg-x11-fonts-cyrillic \
        xorg-x11-fonts-misc \
        xorg-x11-fonts-Type1 \
        xorg-x11-utils
      
      # Instalar Chrome usando Puppeteer
      cd /var/app/current
      sudo -u webapp npx puppeteer browsers install chrome
    ignoreErrors: false