packages:
  dnf:
    # Dependencies for Puppeteer/Chromium on Amazon Linux 2023.
    # These are required for headless Chrome to run correctly.
    - nss
    - libX11-xcb
    - libXcomposite
    - libXcursor
    - libXdamage
    - libXext
    - libXfixes
    - libXi
    - libXrandr
    - libXrender
    - libXtst
    - pango
    - at-spi2-atk
    - alsa-lib

container_commands:
  01_npm_install:
    command: "npm install --production"
    cwd: "/var/app/staging"

